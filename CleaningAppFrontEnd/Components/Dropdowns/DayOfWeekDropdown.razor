<div class="mb-3">
    <label>Day of Week:</label>
    <select @bind="DayOfWeekValue">
        <option value="0">Sunday</option>
        <option value="1">Monday</option>
        <option value="2">Tuesday</option>
        <option value="3">Wednesday</option>
        <option value="4">Thursday</option>
        <option value="5">Friday</option>
        <option value="6">Saturday</option>
    </select>
</div>

@code {
    private int _dayOfWeekValue;

    [Parameter]
    public int DayOfWeekValue
    {
        get => _dayOfWeekValue;
        set
        {
            if (_dayOfWeekValue != value)
            {
                _dayOfWeekValue = value;
                DayOfWeekValueChanged.InvokeAsync(value);
            }
        }
    }

    [Parameter]
    public EventCallback<int> DayOfWeekValueChanged { get; set; }
}
